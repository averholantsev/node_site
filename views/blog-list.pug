extends default

block content
    article.breadcrumbs
        .breadcrumbs-container.container
            .b-left-block
                span.b-black BLOG
            .b-right-block
                span You Are Here:
                span 
                    a.b-link(href="/") HOME
                span  / 
                span.b-line BLOG
    article.blog-list
        .blog-list-content.container
            .blog-note-container
                each blog in blogs
                    .blog-note
                        .note-share
                            a.share-date(href="#")
                                span.share-day #{blog.date.getDay()}
                                span#share-month-id.share-month #{monthsList[blog.date.getMonth()]}
                            .share-smm-block
                                a.share-smm(href="#")
                                    i.fab.fa-vk
                                a.share-smm(href="#")
                                    i.fab.fa-facebook-f
                                a.share-smm(href="#")
                                    i.fab.fa-twitter
                        .note-info
                            a.note-image(href="#")
                                img(src=`${blog.main_img_path}`, alt="")
                            h4
                                |By 
                                a(href="#") #{blog.autor} 
                                |in 
                                a.note-category(href="#") #{blog.tag_name}
                            a.note-h(href="#") #{blog.title}
                            p #{blog.description}
                .blog-navigation
                    a.nav.nav-active(href="/blog?page=1&size=10") 1
                    a.nav(href="#") 2
                    a.nav-next(href="#") next
                        i.fas.fa-chevron-left
                    a.nav-next(href="#") next
                        i.fas.fa-chevron-right
            .blog-sidebar
                .sidebar-container
                    h3 SEARCH
                    .search-block
                        input.search-input(type="search", name="search", id="search", placeholder="Enter keyword...", autocomplete="off")
                        button.search-sub(type="submit") search